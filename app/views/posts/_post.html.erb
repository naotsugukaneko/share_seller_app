<div>
  <% @posts.each do |post| %>
    <p>【投稿者】<%= post.user.name %></p>
    <%= link_to post_path(post.id) do %>
      <div class="content_post">
        <%= image_tag post.image.url %>
        <p>【投稿日】<%= l post.created_at, format: :short %></p>
      </div>
    <% end %>
    <p>
      <% if post.body.nil? %>
        <%= post.body %> 
      <% else %>
        <%= safe_join(post.body.split("\n"),tag(:br)) %>
      <% end %> 
    </p> 
  <% end %>
</div>
