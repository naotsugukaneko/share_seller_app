<% if user_signed_in? %>
  <% unless post.liked_by?(current_user).blank? %>
    <%= link_to post_likes_path(post_id: post.id, id: post.likes[0].id), method: :delete, remote: true do %>
      <div class="vertical_like">
       <i class="fas fa-heart unlike-btn" ></i>
       <%= post.likes.count %>
      </div>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post.id), method: :post, remote: true do %>
      <div class="vertical_like">
        <i class="far fa-heart like-btn"></i>
        <%= post.likes.count %>
      </div>
    <% end %>
  <% end %>
<% end %> 